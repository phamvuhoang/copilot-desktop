{
  "name": "ai-copilot-desktop",
  "version": "1.0.0",
  "description": "AI Copilot for Desktops - A cross-platform desktop AI assistant",
  "main": "client/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "test": "jest"
  },
  "keywords": [
    "ai",
    "copilot",
    "desktop",
    "assistant",
    "electron"
  ],
  "author": "AI Copilot Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "auto-launch": "^5.0.5",
    "axios": "^1.6.0",
    "howler": "^2.2.4",
    "smart-buffer": "^4.2.0"
  },
  "build": {
    "appId": "com.aicopilot.desktop",
    "productName": "AI Copilot Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "client/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "client/assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "client/assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "client/assets/icon.png"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aicopilot/desktop"
  }
}
